<!doctype html>
<html>
  <head>
    <title>Fetch News</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <%- include('header.ejs') %>
  </head>
  <body class="d-flex flex-column">
    <div class="row justify-content-center align-items-center"> 
    <div class="col-lg-6"> 
      <h1 class="mt-3">Import News</h1>
      <form action="fetch_news" method="GET">
        <h5>Looking for latest news? </h5> 
        <p>Import latest articles from various news medias with any keywords</p>
        <div class="form-group mb-4">
          <label>Keyword</label>
          <input id="keywords" type="text" name="keywords" class="form-control" placeholder="Write keyword">
        </div>
        <div class="form-group mb-4">
          <label>Source</label>
          <select class="form-control" id="source" name="source">
          <% sources.forEach(function(source) { %>
          <option value="<%= source.name %>:<%=source.id%>"><%= source.name %></option>
          <% }) %>
          </select>
        </div>
      <div class="text-center">
        <input type="submit" value="Import" class="btn btn-dark w-50">
      </div>
    </form>
  </body>
  <%- include('footer.ejs') %>
</html>
