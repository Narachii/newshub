<!doctype html>
<html>
  <head>
    <title>Register for </title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
  </head>
  <body class="d-flex flex-column">
    <div class="row justify-content-center align-items-center"> 
      <div class="col-lg-6">
        <h1>Register </h1>
        <form method="POST" action="registered">
            <div class="form-group mb-4">
              <label>First name</label>
              <input id="first" type="text" name="first" class="form-control" placeholder="Write fist name"/>
            </div>
            <div class="form-group mb-4">
              <label>Last name</label>
              <input id="last" type="text" name="last" class="form-control" placeholder="Write last name"/>
            </div>
            <div class="form-group mb-4">
              <label>Email</label>
              <input id="email" type="text" name="email" class="form-control" placeholder="test@mail.com"/>
            </div>
            <div class="form-group mb-4">
              <label>Username</label>
              <input id="username" type="text" name="username" class="form-control" placeholder="Write username"/>
            </div>
            <div class="form-group mb-4">
              <label>Password</label>
              <input id="password" type="text" name="password" class="form-control" placeholder="Write password with minimum 4 characters"/>
            </div>
            <div class="text-center">
              <input class="btn btn-dark w-50" type="submit" value="Register" >
            </div>
          </form>
      </div>
    </div>
  </body>
</html>
