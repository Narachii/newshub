<!doctype html>
<html>
  <head>
    <title>Login Page </title>
    <link rel="stylesheet" href="/css/bootstrap.min.css" />

    <% if (message) { %>
      <div class="alert alert-danger" role="alert">
        <%= message %>
      </div>
    <% } %>
  </head>
  <body class="d-flex flex-column"></body>
    <div class="row justify-content-center align-items-center"> 
      <div class="col-lg-6">
        <h1>Login Page </h1>
        <form method="POST" action="loggedin" class="needs-validation" novalidate>
            <div class="form-group mb-4">
              <label>Username</label>
              <input id="username" type="text" name="username" class="form-control" placeholder="Write username" required/>
              <div class="invalid-feedback">
                Please enter userName
              </div>
            </div>
            <div class="form-group mb-4">
              <label>Password</label>
              <input id="password" type="text" name="password" class="form-control" placeholder="Write password" required/>
              <div class="invalid-feedback">
                Please enter a password
              </div>
            </div>
            <div class="text-center">
              <input class="btn btn-dark w-50" type="submit" value="Login" >
            </div>
          </form>
          <p class="text-center mt-3"> Don't have an account? <a href="./register">Sign up</a></p>
      </div>
    </div>

    <script>
      const forms = document.querySelectorAll('.needs-validation');
      forms.forEach(function (form) {
        form.addEventListener('submit', function (event) {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }

          form.classList.add('was-validated'); Â 

        }, false);
      });
    </script>
    <%- include('footer.ejs') %>
  </body>

</html>
